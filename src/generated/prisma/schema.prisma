generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Item {
  id       String    @id @default(cuid())
  name     String
  quantity Int
  sku      String    @unique
  category String // "Material" | "Flowers"
  image    String?
  history  History[]
}

model History {
  id       String   @id @default(cuid())
  quantity Int
  date     DateTime @default(now())
  itemId   String
  item     Item     @relation(fields: [itemId], references: [id])
}
